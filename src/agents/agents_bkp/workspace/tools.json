                    },
                    "content": {
                        "type": "string",
                        "description": "The content to write to the file"
                    }
                },
                "required": [
                    "filename",
                    "content"
                ]
            },
            "returns": {
                "type": "string",
                "description": "Confirmation that the file was created"
            }
        },
        {
