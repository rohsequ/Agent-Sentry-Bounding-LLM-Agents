            },
            "returns": {
                "type": "string",
                "description": "A list of draft emails"
            }
        },
        {
            "name": "search_contacts_by_name",
            "description": "Searches for a contact by their name",
            "parameters": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "The name to search for in contacts"
                    }
                },
                "required": [
                    "query"
                ]
            },
            "returns": {
                "type": "string",
                "description": "The contact details found"
            }
        },
        {
            "name": "search_contacts_by_email",
            "description": "Searches for a contact by their email address",
            "parameters": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "The email address to search for in contacts"
                    }
                },
                "required": [
                    "query"
                ]
            },
            "returns": {
                "type": "string",
                "description": "The contact details found"
            }
        },
        {
            "name": "get_current_day",
            "description": "Gets the current simulation date",
            "parameters": {
                "type": "object",
                "properties": {}
            },
            "returns": {
                "type": "string",
                "description": "The current date in YYYY-MM-DD format"
            }
        },
        {
            "name": "search_calendar_events",
            "description": "Searches calendar events by query and optional date",
            "parameters": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "The text to search for in event titles or descriptions"
                    },
                    "date": {
                        "type": "string",
                        "description": "The specific date to filter events by (YYYY-MM-DD)",
                        "nullable": true
                    }
                },
                "required": [
                    "query"
                ]
            },
            "returns": {
                "type": "string",
                "description": "A list of matching calendar events"
            }
        },
        {
            "name": "get_day_calendar_events",
            "description": "Retrieves all calendar events for a specific day",
            "parameters": {
                "type": "object",
                "properties": {
                    "day": {
                        "type": "string",
                        "description": "The day to retrieve events for (YYYY-MM-DD)"
                    }
                },
                "required": [
                    "day"
                ]
            },
            "returns": {
                "type": "string",
                "description": "A list of events on that day"
            }
        },
        {
            "name": "create_calendar_event",
            "description": "Creates a new calendar event",
            "parameters": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "The title of the event"
                    },
                    "description": {
                        "type": "string",
                        "description": "The description of the event"
                    },
                    "start_time": {
                        "type": "string",
                        "description": "The start time (YYYY-MM-DD HH:MM:SS)"
                    },
                    "end_time": {
                        "type": "string",
                        "description": "The end time (YYYY-MM-DD HH:MM:SS)"
                    },
                    "location": {
                        "type": "string",
                        "description": "The location of the event (optional)",
                        "nullable": true
                    },
                    "participants": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "A list of email addresses to invite (optional)",
                        "nullable": true
                    }
                },
                "required": [
                    "title",
                    "description",
                    "start_time",
                    "end_time"
                ]
            },
            "returns": {
                "type": "string",
                "description": "Confirmation of the created event"
            }
        },
        {
            "name": "cancel_calendar_event",
            "description": "Cancels (deletes) a calendar event",
            "parameters": {
                "type": "object",
                "properties": {
                    "event_id": {
                        "type": "string",
                        "description": "The ID of the event to cancel"
                    }
                },
                "required": [
                    "event_id"
                ]
            },
            "returns": {
                "type": "string",
                "description": "Confirmation that the event was cancelled"
            }
        },
        {
            "name": "reschedule_calendar_event",
            "description": "Reschedules an existing calendar event to new times",
            "parameters": {
                "type": "object",
                "properties": {
                    "event_id": {
                        "type": "string",
                        "description": "The ID of the event to reschedule"
                    },
                    "new_start_time": {
                        "type": "string",
                        "description": "The new start time (YYYY-MM-DD HH:MM:SS)"
                    },
                    "new_end_time": {
                        "type": "string",
                        "description": "The new end time (YYYY-MM-DD HH:MM:SS)"
                    }
                },
                "required": [
                    "event_id",
                    "new_start_time",
                    "new_end_time"
                ]
            },
            "returns": {
                "type": "string",
                "description": "Confirmation that the event was rescheduled"
            }
        },
        {
            "name": "add_calendar_event_participants",
            "description": "Adds participants to an existing calendar event",
            "parameters": {
                "type": "object",
                "properties": {
                    "event_id": {
                        "type": "string",
                        "description": "The ID of the event"
                    },
                    "participants": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "A list of email addresses to add"
                    }
                },
                "required": [
                    "event_id",
                    "participants"
                ]
            },
            "returns": {
                "type": "string",
                "description": "Confirmation that participants were added"
            }
        },
