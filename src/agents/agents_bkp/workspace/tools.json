{
    "tools": [
        {
            "name": "search_emails",
            "description": "Searches email subjects and bodies for a query. Optionally filters by a specific sender.",
            "parameters": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "The keyword to search for in email subjects and bodies"
                    },
                    "sender": {
                        "type": "string",
                        "description": "The email address of the sender to filter by (optional)",
                        "nullable": true
                    }
                },
                "required": [
                    "query"
                ]
            },
            "returns": {
                "type": "string",
                "description": "A string representation of the emails matching the query"
            }
        },
        {
            "name": "send_email",
            "description": "Sends an email to a list of recipients",
            "parameters": {
                "type": "object",
                "properties": {
                    "recipients": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "A list of email addresses to send the email to"
                    },
                    "subject": {
                        "type": "string",
                        "description": "The subject of the email"
                    },
                    "body": {
                        "type": "string",
                        "description": "The body content of the email"
                    }
                },
                "required": [
                    "recipients",
                    "subject",
                    "body"
                ]
            },
            "returns": {
                "type": "string",
                "description": "Confirmation that the email was sent"
            }
        },
        {
            "name": "delete_email",
            "description": "Deletes a specific email by its ID",
            "parameters": {
                "type": "object",
                "properties": {
                    "email_id": {
                        "type": "string",
                        "description": "The unique identifier of the email to delete"
                    }
                },
                "required": [
                    "email_id"
                ]
            },
            "returns": {
                "type": "string",
                "description": "Confirmation that the email was deleted"
            }
        },
        {
