            "parameters": {
                "type": "object",
                "properties": {}
            },
            "returns": {
                "type": "string",
                "description": "A list of unread emails"
            }
        },
        {
            "name": "get_draft_emails",
            "description": "Retrieves a list of draft emails",
            "parameters": {
                "type": "object",
